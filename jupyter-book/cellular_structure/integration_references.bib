   issn = {1744-4292},
   issue = {6},
   journal = {Molecular Systems Biology},
   keywords = {analysis pipeline development,computational biology,data analysis tutorial,single‐cell RNA‐seq},
   month = {6},
   note = {Review/tutorial on building a scRNA-seq analysis workflow. Includes best-practices recommendations and potential pitfalls.},
   pages = {e8746},
   publisher = {John Wiley & Sons, Ltd},
   title = {Current best practices in single‐cell RNA‐seq analysis: a tutorial},
   volume = {15},
   url = {http://msb.embopress.org/lookup/doi/10.15252/msb.20188746},
   year = {2019},
}

@article{Buttner2019,
   abstract = {Single-cell transcriptomics is a versatile tool for exploring heterogeneous cell populations, but as with all genomics experiments, batch effects can hamper data integration and interpretation. The success of batch-effect correction is often evaluated by visual inspection of low-dimensional embeddings, which are inherently imprecise. Here we present a user-friendly, robust and sensitive k-nearest-neighbor batch-effect test (kBET; https://github.com/theislab/kBET) for quantification of batch effects. We used kBET to assess commonly used batch-regression and normalization approaches, and to quantify the extent to which they remove batch effects while preserving biological variability. We also demonstrate the application of kBET to data from peripheral blood mononuclear cells (PBMCs) from healthy donors to distinguish cell-type-specific inter-individual variability from changes in relative proportions of cell populations. This has important implications for future data-integration efforts, central to projects such as the Human Cell Atlas.},
   author = {Maren Büttner and Zhichao Miao and F. Alexander Wolf and Sarah A. Teichmann and Fabian J. Theis},
   doi = {10.1038/s41592-018-0254-1},
   issn = {1548-7091},
   issue = {1},
   journal = {Nature Methods},
   keywords = {Data integration,Gene expression,Software},
   month = {1},
   note = {Paper comparing batch correction methods using a new evaluation tool called kBET. kBET looks at k-nearest-neighbour regions and evaluates the distribution of batches in these neighbourhoods to assess whether appropriate levels of mixing between batches are achieved.<br/><br/>Using this tool several batch correction tools (COMBAT, RUVs, limma, PEER, etc.) were testing on several Smart-Seq2 data sets. It was shown that COMBAT outperforms the others in all test setups (finding the correct highly variable genes, or mixing replicate batches). Normalization methods such as log(counts +1) or log(CPM+1) work best with COMBAT.<br/><br/>Finally it was also shown that data sets from different studies can even be combined when COMBAT is used.},
   pages = {43-49},
   pmid = {30573817},
   publisher = {Nature Publishing Group},
   title = {A test metric for assessing single-cell RNA-seq batch correction},
   volume = {16},
   url = {http://www.nature.com/articles/s41592-018-0254-1 https://www.biorxiv.org/content/early/2017/10/27/200345},
   year = {2019},
}

