   keywords = {Data integration,Machine learning,Software,Transcriptomics},
   month = {12},
   pages = {41-50},
   pmid = {34949812},
   publisher = {Nature Publishing Group},
   title = {Benchmarking atlas-level data integration in single-cell genomics},
