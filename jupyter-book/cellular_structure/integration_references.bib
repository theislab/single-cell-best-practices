@article{Johnson2007,
   author = {W. E. Johnson and C. Li and A. Rabinovic},
   doi = {10.1093/biostatistics/kxj037},
   issn = {1465-4644},
   issue = {1},
   journal = {Biostatistics},
   month = {1},
   note = {The paper introduces the COMBAT method to remove batch effects in microarray experiments. Even for scRNA-seq data this method is still the highest performing batch correction method (cf. buettner et al., BioarXiv, 2017).<br/><br/>COMBAT removes batch effects by including them as covariates in a linear model (both additive and multiplicative factors). These covariates are fit from the data using an Empirical Bayes estimate to deal with small sample sizes and possible gene outliers. This is done by assuming that the batch covariates were drawn from a Gaussian (additive) or Inverse Gamma (multiplicative) distribution. The hyperparameters of these distributions are again fit from the data.<br/><br/>The paper shows that this method produces robust, reliable batch correction, which outperforms other more complex methods especially for low sample sizes.<br/><br/>The method includes a design matrix in which covariates can be included that model the experimental design.},
   pages = {118-127},
   publisher = {Oxford University Press},
   title = {Adjusting batch effects in microarray expression data using empirical Bayes methods},
   volume = {8},
   url = {https://academic.oup.com/biostatistics/article-lookup/doi/10.1093/biostatistics/kxj037},
   year = {2007},
}

